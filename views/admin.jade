doctype 5
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="style.css")
    link(rel="stylesheet", href="normalize.css")
    link(rel="stylesheet", href="tabla.css")
    link(rel="stylesheet", href="bootstrap.min.css")
  body
    #wrap
      header
        h1 Plataforma de Evaluación JUDC 2013

      section
        article#container
        form(action='/pantalla', method='post')
          h1 Usuarios registrados
          hr
          h2
            a(href='/nuevo-usuario') Nuevo Usuario
            &nbsp;
            &nbsp;
            a(href='/salir') Cerrar Sesión
            &nbsp;
            &nbsp;
            a(href='/inscritos') Trabajos inscritos
          table#table.table-hover
            tr
              th Nombre
              th Usuario
              th Password
              th Eliminar usuario
              - if (usuarios)
              - each usuario in usuarios
                tr
                  td
                    a(href="/usuario/" + usuario._id.toString(),style="color: #cc5500; font-size: 16px;font-weight:bold;text-align: center;") #{usuario.dato}
                  td #{usuario.nombre}
                  td #{usuario.password}
                  td
                    a(href="/delete-usuario/" + usuario._id.toString()) Borrar

      content
        nav
          ul
            li
              a(href="/") Inicio
            li 
              a(href='/nuevo-trabajo') Inscripición
            li
              a(href='/admin') IR A LA PAGINA PRIVADA
            li 
              a(href='/pantalla') Pizarra
      footer 
        i
          &copy; 2013 | UNAN FAREM Chontales | Diseño y programación : Jonathán Moreno
        block text




